<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="Product"
                type="app.appworks.school.stylish.data.Product" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <ImageView
                android:id="@+id/big_picture"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                app:imageUrl="@{Product.mainImage}"
                app:layout_constraintBottom_toTopOf="@+id/small_picture1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_weight="0.70" />

        <ImageView
                android:id="@+id/small_picture1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                android:paddingTop="4dp"
                android:paddingEnd="4dp"
                app:imageUrl="@{Product.images[0]}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/small_picture2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/big_picture"
                app:layout_constraintVertical_weight="0.30" />

        <ImageView
                android:id="@+id/small_picture2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                android:paddingTop="4dp"
                android:paddingEnd="4dp"
                app:imageUrl="@{Product.images[1]}"
                app:layout_constraintBottom_toBottomOf="@id/small_picture1"
                app:layout_constraintEnd_toStartOf="@+id/small_picture3"
                app:layout_constraintStart_toEndOf="@+id/small_picture1"
                app:layout_constraintTop_toTopOf="@id/small_picture1" />

        <ImageView
                android:id="@+id/small_picture3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                android:paddingTop="4dp"
                app:imageUrl="@{Product.images[2]}"
                app:layout_constraintBottom_toBottomOf="@id/small_picture1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/small_picture2"
                app:layout_constraintTop_toTopOf="@id/small_picture1" />

        <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="10"
                android:text="@{Product.title}"
                android:textColor="@color/white"
                android:fontFamily="@font/noto_sans"
                android:letterSpacing="0.15"
                android:maxLines="1"
                android:shadowColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/small_picture2"
                app:layout_constraintEnd_toEndOf="@id/small_picture2"
                app:layout_constraintStart_toStartOf="@id/small_picture2" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>